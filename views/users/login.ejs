<%- layout("/layouts/boilerplate.ejs") %>
<div class="row mt-3">
  <h1 class="col-6 offset-3">Log In on Wandering Trader</h1>
  <div class="col-6 offset-3">
    <form action="/login" method="post" novalidate class="needs-validation">
      <div class="mb-3">
        <label for="username" class="form-label">Username</label>
        <input
          type="text"
          name="username"
          id="username"
          class="form-control"
          required
        />
      </div>
      <div class="mb-3">
        <label for="password" class="form-label">Password</label>
        <input
          type="password"
          name="password"
          id="password"
          class="form-control"
          required
        />
      </div>
      <button type="submit" class="btn btn-dark edit-btn mt-3">Login!!!</button>
    </form>
  </div>
</div>
